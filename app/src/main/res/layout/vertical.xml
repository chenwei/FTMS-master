<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rds.ftms.fragment.FamilyMembersDialogFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8sp"
        android:layout_marginTop="8sp"
        android:layout_marginRight="8sp"
        android:layout_marginLeft="8sp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:orientation="horizontal" 
                android:background="@drawable/idbg">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical" >

                   <!-- <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >
                        <TextView
                            android:id="@+id/textview_config_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </LinearLayout>-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="姓名："
                            android:textColor="#388E8E"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/editText_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:hint=""
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="性别："
                            android:textColor="#388E8E"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/editText_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:hint=""
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="民族："
                            android:textColor="#388E8E"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/editText_nation"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:hint=""
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="出生："
                            android:textColor="#388E8E"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/editText_year"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:hint="xxxx"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="年"
                            android:textColor="#388E8E"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="\t\t\t"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/editText_month"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:hint="xx"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="月"
                            android:textColor="#388E8E"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/editText_day"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:hint="xx"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="日"
                            android:textColor="#388E8E"
                            android:textSize="16dp" />
                    </LinearLayout>


                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10sp"
		            android:layout_marginTop="10sp"
		            android:layout_marginRight="10sp"
		            android:layout_marginLeft="30sp"
                    android:layout_weight="5"
                    android:src="@drawable/photo"/>
            </LinearLayout>
			<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:orientation="vertical" 
                android:background="@drawable/idbg2">
                 <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                     <TextView
                         android:id="@+id/textView"
                         android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:text="住址："
                         android:textColor="#388E8E"
                         android:textSize="16dp" />

                     <EditText
                    android:id="@+id/editText_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint=""
                    android:lines="2"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="身份证号："
                    android:textSize="16dp"
                    android:textColor="#388E8E"/>

                <EditText
                    android:id="@+id/editText_IDCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:text=""
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="签发机关："
                    android:textSize="16dp"
                    android:textColor="#388E8E"/>

                <EditText
                    android:id="@+id/editText_office"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="有效期间："
                    android:textSize="16dp"
                    android:textColor="#388E8E"/>

                <EditText
                    android:id="@+id/editText_effective"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:lines="1"
                    android:textSize="16dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="居  住  地："
                        android:textSize="16dp"
                        android:textColor="#388E8E"/>

                    <EditText
                        android:id="@+id/editText_residence"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint=""
                        android:lines="1"
                        android:textSize="16dp" />
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal" >
                        <Button
                            android:id="@+id/button_save"
                            android:visibility="gone"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="保存"
                            android:textSize="16dp" />

                        <Button
                            android:id="@+id/button_open"
                            android:layout_width="0dp"
                            android:visibility="gone"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="打开\n设备"
                            android:textSize="16dp" />

                        <Button
                            android:id="@+id/button_close"
                            android:layout_width="0dp"
                            android:visibility="gone"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="关闭\n设备"
                            android:textSize="16dp" />


                        <Button
                            android:id="@+id/button_clear"
                            android:layout_width="0dp"
                            android:visibility="gone"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="清空"
                            android:textSize="16dp" />

                        <Button
                            android:id="@+id/button_finish"
                            android:layout_width="0dp"
                            android:visibility="gone"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="退出"
                            android:textSize="16dp" />
                </LinearLayout>
                </LinearLayout>
           
                
            </LinearLayout>
        </LinearLayout>

</RelativeLayout>